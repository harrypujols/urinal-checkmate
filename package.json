{
  "name": "urinalchess",
  "version": "0.0.1",
  "description": "Number One Game",
  "devDependencies": {
    "browser-sync": "^2.9.1",
    "chokidar-cli": "^3.0.0",
    "del": "^2.0.2",
    "gulp": "^3.9.0",
    "gulp-compass": "^2.1.0",
    "gulp-concat": "^2.6.0",
    "gulp-gh-pages": "0.5.4",
    "gulp-notify": "^2.2.0",
    "gulp-plumber": "^1.0.1",
    "gulp-uglify": "^1.4.0",
    "gulp-util": "^3.0.6",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.2",
    "serve": "^11.3.0",
    "uglify-js": "^3.3.10"
  },
  "scripts": {
    "clean": "rimraf docs/*",
    "compass": "docker run --rm -v \"$(pwd)\":/app -w /app compass-ruby compass compile",
    "copy:html": "cp dev/*.html docs/",
    "copy:data": "mkdir -p docs/data && cp dev/data/*.json docs/data/",
    "copy:js": "mkdir -p docs/js && cp -R dev/js/. docs/js/",
    "copy:img": "mkdir -p docs/img && cp -R dev/images/. docs/img/",
    "concat:js": "uglifyjs dev/js/libraries/*.js -o docs/js/vendor.js -c -m",
    "build": "npm run clean && npm run compass && npm run copy:html && npm run copy:data && npm run copy:js && npm run copy:img && npm run concat:js",
    "serve": "serve docs",
    "watch:html": "chokidar 'dev/*.html' -c 'npm run copy:html'",
    "watch:data": "chokidar 'dev/data/*.json' -c 'npm run copy:data'",
    "watch:js": "chokidar 'dev/js/*.js' -c 'npm run copy:js'",
    "watch:img": "chokidar 'dev/images/**/*' -c 'npm run copy:img'",
    "watch:concat": "chokidar 'dev/js/libraries/*.js' -c 'npm run concat:js'",
    "watch:sass": "chokidar 'dev/sass/**/*.scss' -c 'npm run compass'",
    "watch": "npm-run-all --parallel watch:*",
    "start": "npm-run-all --parallel watch:* serve"
  }
}